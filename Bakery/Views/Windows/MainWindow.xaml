<Window x:Class="Bakery.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bakery.Views.Workspaces"
        xmlns:views="clr-namespace:Bakery.Views.Workspaces"
        xmlns:viewmodels="clr-namespace:Bakery.ViewModels"
        mc:Ignorable="d" Width="1075" Height="600"
        Title="Основная страница"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary Source="../../Resources/Templates/MainWindowViewTemplates.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto"/>
            <ColumnDefinition
                Width="Auto"/>
            <ColumnDefinition
                Width="*"/>
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            BorderBrush="Gray"
            Background="WhiteSmoke"
            BorderThickness="1"
            CornerRadius="5"
            Margin="5,5,0,5">
            <StackPanel
                Margin="5"
                Background="WhiteSmoke">
                <Border
                    BorderBrush="RoyalBlue"
                    Background="RoyalBlue"
                    Padding="5"
                    CornerRadius="2.5">
                    <TextBlock
                        Text="Навигация"
                        Background="RoyalBlue"
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                </Border>

                <ItemsControl
                    ItemsSource="{Binding NavigationCommands}"
                    ItemTemplate="{Binding Source={StaticResource CommandHyperlinkTemplate}}">
                </ItemsControl>
            </StackPanel>
        </Border>

        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Width="3"
            Background="Gainsboro"
            BorderBrush="Black"
            BorderThickness="0.5"
            Margin="10, 5"/>

        <Border
            Grid.Row="0"
            Grid.Column="2"
            BorderBrush="Gray"
            Background="WhiteSmoke"
            BorderThickness="1"
            CornerRadius="5"
            Margin="0,5,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Margin="5"
                    Background="WhiteSmoke">
                    <Border
                        BorderBrush="RoyalBlue"
                        Background="RoyalBlue"
                        Padding="5"
                        CornerRadius="2.5">
                        <TextBlock
                            Text="Рабочее пространство"
                            Background="RoyalBlue"
                            Foreground="White"
                            HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <TabControl
                    ItemsSource="{Binding Workspaces}"
                    ItemTemplate="{Binding Source={StaticResource ClosableTabItemTemplate}}"
                    SelectedIndex="{Binding SelectedWorkspaceIndex}"
                    Margin="5,0,5,5"
                    Grid.Row="1">
                    <TabControl.Style>
                        <Style TargetType="TabControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedIndex}"
                                             Value="-1">
                                    <Setter
                                        Property="Visibility"
                                        Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TabControl.Style>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>
